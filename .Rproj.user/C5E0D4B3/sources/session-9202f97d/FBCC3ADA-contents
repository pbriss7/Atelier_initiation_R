# Importez le roman Maria Chapdelaine dont le chemin est le suivant: donnees/maria_chapdelaine.txt;
library(stringr)
maria <- readLines("donnees/maria_chapdelaine.txt")

fixed(maria, pattern = "CHAP")

maria_v <- strsplit(maria, "\\W") |> unlist()


str_which(maria_v, "^$" )


a <- str_which(maria_v, "")
head(grep("", maria_v), 10)
head(maria_v[a])
