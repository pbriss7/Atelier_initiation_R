# Fonctions utiles

# Installation et activation de fonctions
activer_extensions <- function() {
  noms_extensions <- readline(prompt = "Quelles extensions activer? SÃ©pare chaque nom d'extension par une virgule (ex.: data.table,dplyr,ggplot2) ")
  noms_extensions_v <- strsplit(noms_extensions, ",") |> unlist()
  invisible(sapply(noms_extensions_v, activer_extension))
}